@model UserWithRolesModel
@{
    ViewData["Title"] = "Пользователь";
}
<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.User.Id</td>
            <td>@Model.User.Email</td>
            <td>
                @foreach (var role in Model.Roles)
                {
                    <label>@role </label>
                }
            </td>
        </tr>
    </tbody>
</table>
<div class="form-group">
    <label asp-for="Role"></label>
    <select asp-for="Role" asp-items="@Model.RolesList" class="custom-select text-dark" aria-required="true" style="width:auto">
        <option disabled selected>Выберите роль</option>
    </select>
    <span asp-validation-for="Role" class="text-danger"></span>
</div>
<div>
    <a class="btn btn-primary" asp-controller="Users" 
                               asp-action="AddRoleToUser" 
                               asp-route-userId="@Model.User.Id"
                               asp-route-role="@Model.Role">Добавить</a>
    <a class="btn btn-primary" asp-controller="Users" 
                               asp-action="DeleteRoleUser" 
                               asp-route-userIdd="@Model.User.Id"
                               asp-route-role="@Model.Role">Удалить</a>
</div>
