@model List<PhoneBookRecord>
@inject UserRoles UserRoles
<h2>PhoneBook</h2>

@if (UserRoles.Roles.Contains("User") || UserRoles.Roles.Contains("Admin"))
{
    <div>
        <a class="btn btn-primary" asp-controller="CreateRecord" asp-action="CreateRecord" title="Создать запись">Создать</a>
    </div>
    <div>
        <p>&nbsp;</p>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>LastName</th>
            <th>FirstName</th>
            <th>FathresName</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Details"
                           asp-action="DetailsShow"
                           asp-route-id="@item.Id"
                           title="Просмотреть"
                           class="linkDetails">@item.Id</a>
                    </td>
                    <td>@item.LastName</td>
                    <td>@item.FirstName</td>
                    <td>@item.FathersName</td>
                    @if (UserRoles.Roles.Contains("Admin"))
                    {
                        <td>
                            <a class="btn btn-dark" asp-controller="DeleteRecord"
                               asp-action="Delete"
                               asp-route-id="@item.Id"
                               title="Удалить">Удалить</a>
                        </td>
                    }
                </tr>
            }
        }

    </tbody>
</table>
